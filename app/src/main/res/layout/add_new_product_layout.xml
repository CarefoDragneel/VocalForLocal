<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <frlgrd.animatededittext.AnimatedEditText
        android:id="@+id/product_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:editTextIcon="@drawable/arrow_icon"
        app:editTextInputType="name"
        app:hintText="Item_Name"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/product_item_image"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_marginRight="12dp"
            android:drawableLeft="@drawable/add_photo_icon"
            android:text="@string/pick_the_image"/>

        <Spinner
            android:id="@+id/product_item_category"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="2dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>



    <frlgrd.animatededittext.AnimatedEditText
        android:id="@+id/product_item_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:editTextIcon="@drawable/arrow_icon"
        app:editTextInputType="name"
        app:hintText="Item_Description"/>

    <Button
        android:id="@+id/product_item_save_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/product_item_save"/>

</LinearLayout>